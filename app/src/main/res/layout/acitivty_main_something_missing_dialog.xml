<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/transparent_black"
    android:gravity="center"
    android:padding="40dp"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:background="@drawable/something_missing_dialog_custom_background"
        android:padding="20dp"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/something_missing_dialog_text"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:fontFamily="@string/font_family_condensed"
            android:gravity="center"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/something_missing_dialog_okay"
            android:background="@drawable/activity_login_custom_button"
            android:fontFamily="@string/font_family_condensed"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp"
            android:id="@+id/something_missing_dialog_okay"
            android:layout_marginTop="?actionBarSize"
            android:textColor="@color/white"/>

    </LinearLayout>

</LinearLayout>
