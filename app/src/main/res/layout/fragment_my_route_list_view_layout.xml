<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:padding="5dp"
    android:background="@drawable/fragment_my_route_custom_linear_layout_with_shadow"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:padding="7dp"
        android:layout_height="50dp">

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="Title"
            android:fontFamily="sans-serif-condensed"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_alignParentStart="true"
            android:layout_centerInParent="true"
            android:id="@+id/fragment_my_route_list_view_title" />

        <com.jby.ridedriver.registration.others.SquareHeightLinearLayout
            android:layout_width="match_parent"
            android:padding="7dp"
            android:id="@+id/fragment_my_route_view_layout"
            android:layout_toStartOf="@id/fragment_my_route_delete_layout"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/fragment_my_route_view_icon"/>

        </com.jby.ridedriver.registration.others.SquareHeightLinearLayout>


        <com.jby.ridedriver.registration.others.SquareHeightLinearLayout
            android:layout_width="match_parent"
            android:layout_alignParentEnd="true"
            android:padding="7dp"
            android:id="@+id/fragment_my_route_delete_layout"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/fragment_my_route_delete_icon"/>

        </com.jby.ridedriver.registration.others.SquareHeightLinearLayout>

    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/transparent_black"
            android:fontFamily="sans-serif-condensed"
            android:gravity="start"
            android:textSize="16sp"
            android:id="@+id/fragment_my_route_list_view_date"
            android:text="01 Jul"/>

    </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:padding="2dp"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:contentDescription="@string/activitiy_home_my_route"
                    android:padding="3dp"
                    android:src="@drawable/start_point_icon"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="29, Jalan Tasek 51"
                    android:textColor="@color/black"
                    android:layout_marginStart="5dp"
                    android:textSize="16sp"
                    android:id="@+id/fragment_my_route_list_view_pick_up"
                    android:fontFamily="sans-serif-condensed"
                    android:maxLines="1"
                    android:ellipsize="end"
                   />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:padding="2dp"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:padding="3dp"
                    android:contentDescription="@string/activitiy_home_my_route"
                    android:src="@drawable/create_route_dialog_end_point_icon"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="29, Jalan Tasek 51"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:id="@+id/fragment_my_route_list_view_drop_off"
                    android:fontFamily="sans-serif-condensed"
                    android:layout_marginStart="5dp"
                    android:maxLines="1"
                    android:ellipsize="end" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:padding="2dp"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:padding="3dp"
                    android:contentDescription="@string/activitiy_home_my_route"
                    android:src="@drawable/fragment_my_route_note_icon"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="None"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:id="@+id/fragment_my_route_list_view_note"
                    android:fontFamily="sans-serif-condensed"
                    android:layout_marginStart="5dp"
                    android:maxLines="1"
                    android:ellipsize="end" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:background="@color/disable_color"/>
            
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/fragment_my_route_list_view_match_layout"
                android:padding="10dp">

                <com.jby.ridedriver.registration.others.SquareHeightLinearLayout
                    android:layout_width="match_parent"
                    android:id="@+id/fragment_my_route_user_icon"
                    android:layout_height="match_parent">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/fragment_my_route_list_view_match_icon"
                        android:src="@drawable/fragment_my_route_user_icon"/>

                </com.jby.ridedriver.registration.others.SquareHeightLinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_toEndOf="@id/fragment_my_route_user_icon"
                    android:gravity="center_vertical"
                    android:layout_marginStart="20dp"
                    android:textColor="@color/black"
                    android:id="@+id/fragment_my_route_list_view_match_number"
                    android:fontFamily="@string/font_family_condensed"
                    android:text="20+ matches"/>


                <com.jby.ridedriver.registration.others.SquareHeightLinearLayout
                    android:layout_width="match_parent"
                    android:layout_alignParentEnd="true"
                    android:padding="8dp"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:contentDescription="@string/activitiy_home_my_route"
                        android:src="@drawable/activity_edit_profile_arrow_right_icon"/>

                </com.jby.ridedriver.registration.others.SquareHeightLinearLayout>

            </RelativeLayout>

        </LinearLayout>

</LinearLayout>
