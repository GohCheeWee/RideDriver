<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/background"
    android:layout_height="?actionBarSize">

    <com.jby.ridedriver.registration.others.SquareHeightLinearLayout
        android:layout_width="wrap_content"
        android:id="@+id/actionbar_menu"
        android:padding="7dp"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:padding="10dp"
            android:src="@drawable/actionbar_menu"
            android:contentDescription="@string/actionbar"/>

    </com.jby.ridedriver.registration.others.SquareHeightLinearLayout>

    <com.jby.ridedriver.registration.others.SquareHeightLinearLayout
        android:layout_width="wrap_content"
        android:id="@+id/actionbar_close"
        android:padding="7dp"
        android:visibility="gone"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:padding="10dp"
            android:src="@drawable/actionbar_close"
            android:contentDescription="@string/actionbar"/>

    </com.jby.ridedriver.registration.others.SquareHeightLinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:text="@string/app_name"
        android:textColor="@color/white"
        android:layout_marginStart="10dp"
        android:textSize="25sp"
        android:textStyle="bold"
        android:id="@+id/actionBar_title"
        android:gravity="center"
        android:layout_centerInParent="true"
        android:fontFamily="@string/cursive"
        android:layout_height="wrap_content" />

    <com.jby.ridedriver.registration.others.SquareHeightLinearLayout
        android:layout_width="wrap_content"
        android:id="@+id/actionbar_logout"
        android:layout_alignParentEnd="true"
        android:padding="5dp"
        android:visibility="gone"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:padding="10dp"
            android:src="@drawable/actionbar_logout"
            android:contentDescription="@string/actionbar"/>

    </com.jby.ridedriver.registration.others.SquareHeightLinearLayout>

</RelativeLayout>
