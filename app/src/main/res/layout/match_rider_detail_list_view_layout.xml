<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/background_white"
    android:padding="5dp"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:background="@drawable/fragment_my_route_custom_linear_layout_with_shadow"
        android:padding="5dp"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize">

            <com.jby.ridedriver.registration.others.SquareHeightLinearLayout
                android:layout_width="match_parent"
                android:id="@+id/match_rider_detail_list_view_rider_picture_layout"
                android:layout_height="match_parent">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="match_parent"
                    android:contentDescription="@string/match_rider_detail_list_view_layout"
                    android:src="@drawable/fragment_my_route_user_icon"
                    android:id="@+id/match_rider_detail_list_view_rider_profile_picture"
                    android:layout_height="match_parent"/>

            </com.jby.ridedriver.registration.others.SquareHeightLinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_toEndOf="@id/match_rider_detail_list_view_rider_picture_layout"
                android:gravity="center_vertical"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:layout_marginStart="10dp"
                android:textStyle="bold"
                android:id="@+id/match_rider_detail_list_view_rider_name"
                android:fontFamily="@string/font_family_condensed"
                android:text="@string/app_name"/>

            <com.jby.ridedriver.registration.others.SquareHeightLinearLayout
                android:layout_width="match_parent"
                android:padding="18dp"
                android:layout_toEndOf="@id/match_rider_detail_list_view_rider_name"
                android:id="@+id/match_rider_detail_list_view_rider_gender_layout"
                android:layout_height="match_parent">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="match_parent"
                    android:contentDescription="@string/match_rider_detail_list_view_layout"
                    android:src="@drawable/activity_profile_female_icon"
                    android:id="@+id/match_rider_detail_list_view_rider_gender"
                    android:layout_height="match_parent"/>

            </com.jby.ridedriver.registration.others.SquareHeightLinearLayout>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:padding="2dp"
            android:layout_marginTop="5dp"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:contentDescription="@string/activitiy_home_my_route"
                android:padding="3dp"
                android:src="@drawable/start_point_icon"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="29, Jalan Tasek 51"
                android:textColor="@color/black"
                android:layout_marginStart="5dp"
                android:textSize="16sp"
                android:id="@+id/match_rider_detail_list_view_pick_up"
                android:fontFamily="sans-serif-condensed"
                android:maxLines="1"
                android:ellipsize="end" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:padding="2dp"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:padding="3dp"
                android:contentDescription="@string/activitiy_home_my_route"
                android:src="@drawable/create_route_dialog_end_point_icon"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="29, Jalan Tasek 51"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:id="@+id/match_rider_detail_list_view_drop_off"
                android:fontFamily="sans-serif-condensed"
                android:layout_marginStart="5dp"
                android:maxLines="1"
                android:ellipsize="end" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:padding="2dp"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:padding="3dp"
                android:contentDescription="@string/activitiy_home_my_route"
                android:src="@drawable/fragment_my_route_note_icon"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="None"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:id="@+id/match_rider_detail_list_view_note"
                android:fontFamily="sans-serif-condensed"
                android:layout_marginStart="5dp"
                android:maxLines="1"
                android:ellipsize="end" />

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:padding="2dp"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:padding="3dp"
                android:id="@+id/fragment_my_route_fare_icon"
                android:contentDescription="@string/activitiy_home_my_route"
                android:src="@drawable/fragment_my_route_fare_icon"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="RM 17.00"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:gravity="center_vertical"
                android:layout_toEndOf="@id/fragment_my_route_fare_icon"
                android:id="@+id/match_rider_detail_list_view_fare"
                android:fontFamily="sans-serif-condensed"
                android:layout_marginStart="5dp"
                android:maxLines="1"
                android:ellipsize="end" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_alignParentEnd="true"
                android:textColor="@color/white"
                android:paddingStart="15dp"
                android:paddingEnd="15dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:textSize="13sp"
                android:id="@+id/match_rider_detail_list_view_payment_method"
                android:fontFamily="sans-serif-condensed"
                android:textStyle="bold"
                android:background="@drawable/match_ride_detail_list_view_custom_text_view"
                android:text="Cash"/>

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/disable_color"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/match_rider_detail_list_view_layout_button"
            android:id="@+id/match_rider_detail_list_view_accept_button"
            android:textStyle="bold"
            android:gravity="center"
            android:textSize="20sp"
            android:padding="5dp"
            android:fontFamily="@string/serif"
            android:textColor="@color/red"/>

    </LinearLayout>

</LinearLayout>


