<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:gravity="center"
    android:background="#80000000"
    android:padding="20dp"
    android:id="@+id/activity_edit_profile_upload_photo_dialog_main_layout"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:background="@drawable/activity_edit_profile_custom_linear_layout"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="#000000"
            android:textStyle="bold"
            android:padding="10dp"
            android:fontFamily="serif"
            android:text="@string/upload_image_dialog"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#f1f1f1"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:id="@+id/activity_edit_profile_upload_photo_new_photo"
            android:textColor="#000000"
            android:padding="15dp"
            android:fontFamily="sans-serif-condensed"
            android:text="@string/upload_image_dialog_from_camera"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:background="#f1f1f1"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:id="@+id/activity_edit_profile_upload_photo_gallery"
            android:textColor="#000000"
            android:padding="15dp"
            android:fontFamily="sans-serif-condensed"
            android:text="@string/upload_image_dialog_from_gallery"/>


    </LinearLayout>

</LinearLayout>
