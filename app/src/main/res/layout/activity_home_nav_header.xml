<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:id="@+id/activity_main_nav_header"
    android:background="@color/background">

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:padding="10dp"
        android:id="@+id/activity_home_profile_picture"
        android:src="@drawable/activity_profile_picture_profile_icon"/>

    <TextView
        android:layout_width="match_parent"
        android:text="@string/app_name"
        android:gravity="center"
        android:textSize="16sp"
        android:id="@+id/activity_home_username"
        android:fontFamily="@string/font_family_condensed"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_height="25dp">

        <TextView
            android:layout_width="wrap_content"
            android:text="4.5"
            android:gravity="center"
            android:fontFamily="@string/font_family_condensed"
            android:textColor="@color/white"
            android:id="@+id/activity_home_rating"
            android:layout_height="match_parent" />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginStart="5dp"
            android:contentDescription="@string/acitivty_main_nav_header_image_view"
            android:src="@drawable/acitivty_home_rate_icon"/>

    </LinearLayout>

</LinearLayout>
